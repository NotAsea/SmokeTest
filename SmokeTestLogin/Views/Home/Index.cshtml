@model IEnumerable<UserInfo>
@{
    ViewData["Title"] = "Home Page";
}


<style>
    .btn-status {
        font-size: 0.65rem;
    }
</style>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <h1 class="text-center">All User</h1>
    <div class="d-flex justify-content-end">
        <input type="text" placeholder="type here to search by Name, enter to search" class="form-control me-2 w-25" id="searchUser"/>
        <button type="button" class="btn btn-secondary" onclick="getAddnew()">Add new User</button>
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">UserName</th>
            <th scope="col">Password</th>
            <th scope="colgroup" colspan="2">Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            var status = user.IsActivated ? "Active" : "Deactivated";
            var statusCss = user.IsActivated ? "btn-warning text-light" : "btn-danger";
            <tr>
                <th scope="row">@user.Id</th>
                <td>
                    @user.Name <br/> <span class="btn btn-sm btn-status @statusCss">@status</span>
                </td>
                <td>@user.UserName</td>
                <td>@user.Password</td>
                <td>
                    <button class="btn btn-primary" onclick="edit(@user.Id)">Edit</button>
                </td>
                <td>
                    <button class="btn btn-primary" onclick="deleteUser(@user.Id)">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div class="modal fade" id="editBox" tabindex="-1" aria-labelledby="editBox" aria-hidden="true"></div>
<script src="~/js/UserEdit/DisplayEditUser.js"></script>